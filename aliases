# the BEST alias ever
alias please='sudo'

# basic navigation aliases
alias cls='clear; ls'
alias uz='unzip'

alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'

alias cp='cp -r' # copy directories recursively

# list dirs first and colored
alias ls='ls -h --color=auto --group-directories-first'
alias la='ls -ah --color=auto --group-directories-first'
alias ll='ls -lah --color=auto --group-directories-first'

# highlight grep match
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# mimic vim functions
alias :q='exit'

# editing and reliading
alias ze='vim $ZDOTDIR/.zshrc'      # zshrc edit
alias zr='source $ZDOTDIR/.zshrc'   # zshrc reload
alias ae='vim $DOTFILES/aliases'    # aliases edit
alias ar='source $DOTFILES/aliases' # aliases reload

# git aliases

alias gs='git status'
alias ga='git add -A'
alias gap='git add -p'
alias gm='git merge'
alias gl='git log'
alias gc='git commit'
alias gb='git branch'
alias gck='git checkout'
alias gckb='git checkout -b'
alias gpl='git pull'
alias gp='git push -u origin HEAD'
alias gr='git reset'
alias grh='git reset --hard'
alias gcl='git clean'
alias gcln='git clean -n'
alias gd='git diff'

# tmux

alias ta='tmux attach-session -t'
alias tl='tmux list-sessions'

# docker

alias dsm='docker start mongodb'
alias dcm='docker exec -it mongodb /bin/bash'  # connect into a mongo docker contaiener

# python aliases

alias python=python3
alias pip=pip3
alias p='python'
alias v='python -m venv venv'
alias a='source venv/bin/activate'
alias d='deactivate'
alias r='pip install -r requirements.txt'
alias tr='pip install -r tests-requirements.txt'
alias pp='python -m pytest -v'
alias var='v;a;r'
alias vart='var;tr'

# vscode

alias c='code .'
