#!/usr/bin/zsh

###############################
# EXPORT ENVIRONMENT VARIABLE #
###############################

export DOTFILES="$HOME/.dotfiles"
export PRIVATE_DOTFILES="$HOME/.private-dotfiles"

# XDG

export XDG_CONFIG_HOME=$HOME/.config
export XDG_DATA_HOME=$XDG_CONFIG_HOME/local/share
export XDG_CACHE_HOME=$XDG_CONFIG_HOME/cache

# editor

export EDITOR="nvim"
export VISUAL="nvim"

# zsh

export ZDOTDIR="$XDG_CONFIG_HOME/zsh"
export HISTFILE="$ZDOTDIR/.zhistory"    # History filepath
export HISTSIZE=10000                   # Maximum events for internal history
export SAVEHIST=10000                   # Maximum events in history file

# bin
#export PATH=$PATH:$HOME/bin/create-flask-app
export PATH=$PATH:$HOME/.asdf/installs/python/3.10.6/bin
export PATH=$PATH:$HOME/.asdf/installs/golang/1.19/packages/bin

# npm
export PATH=$PATH:~/.npm-global/bin

# Homebrew
export PATH=$PATH:/home/linuxbrew/.linuxbrew/bin

# go packages
export PATH=$PATH:~/.asdf/installs/golang/1.19/packages/bin
